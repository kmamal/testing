#!/usr/bin/env node

const { Matcher } = require('@kmamal/globs/matcher')
const { defaultRunner } = require('../src/runner')

const matcher = new Matcher([
	'**/*.test.js',
	'**/*.test.mjs',
	'!node_modules/',
])

;(async () => {
	for await (const file of matcher.getFiles()) {
		defaultRunner.appendFile(file.path)
	}
	defaultRunner.finish()
})()
